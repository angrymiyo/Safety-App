<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_service"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:gravity="center"
        android:background="@drawable/emergency_card_bg">

        <ImageView
            android:id="@+id/iv_service_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Icon"
            app:tint="#5245A1" />

        <TextView
            android:id="@+id/tv_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Police"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/tv_service_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#5245A1"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btn_call_service"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Call Now"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/accent_red"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="6dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
