<?xml version="1.0" encoding="utf-8"?>
<!-- Emergency Detection Overlay - Shows when emergency keyword is detected -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emergency_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Emergency Alert Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="20dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <!-- Emergency Icon with Pulse Animation -->
                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="24dp">

                    <!-- Pulsing Background Circle -->
                    <View
                        android:id="@+id/pulse_circle_1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_pulse"
                        android:backgroundTint="#FFEBEE"
                        android:alpha="0.6"/>

                    <View
                        android:id="@+id/pulse_circle_2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_pulse"
                        android:backgroundTint="#FFCDD2"
                        android:alpha="0.7"/>

                    <!-- Emergency Icon -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_emergency_alert"
                        android:tint="#D32F2F"/>
                </FrameLayout>

                <!-- Alert Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸš¨ EMERGENCY DETECTED"
                    android:textSize="24sp"
                    android:textColor="#D32F2F"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Detection Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/alert_background"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Detected Phrase:"
                            android:textSize="13sp"
                            android:textColor="#78909C"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_detected_phrase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Help me"
                            android:textSize="14sp"
                            android:textColor="#263238"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Category:"
                            android:textSize="13sp"
                            android:textColor="#78909C"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_detected_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Common SOS"
                            android:textSize="14sp"
                            android:textColor="#FF5252"
                            android:textStyle="bold"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:background="@drawable/badge_background"
                            android:backgroundTint="#FFEBEE"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Confidence:"
                            android:textSize="13sp"
                            android:textColor="#78909C"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_emergency_confidence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="87%"
                            android:textSize="16sp"
                            android:textColor="#4CAF50"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Countdown Timer -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sending SOS alert in"
                        android:textSize="14sp"
                        android:textColor="#78909C"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="48sp"
                        android:textColor="#D32F2F"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="seconds"
                        android:textSize="13sp"
                        android:textColor="#78909C"/>
                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Cancel Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_cancel_emergency"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="CANCEL - I'm Safe"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:cornerRadius="28dp"
                        app:icon="@drawable/ic_cancel"
                        app:iconGravity="textStart"
                        app:iconSize="24dp"
                        app:backgroundTint="#4CAF50"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="12dp"
                        android:elevation="6dp"/>

                    <!-- Send Now Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_send_now"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Send SOS Now"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:cornerRadius="25dp"
                        app:strokeColor="#D32F2F"
                        app:strokeWidth="2dp"
                        android:textColor="#D32F2F"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Warning Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency contacts will be notified with your location"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:alpha="0.9"/>
    </LinearLayout>

</FrameLayout>
