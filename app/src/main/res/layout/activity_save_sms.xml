<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFBFC"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Header Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_background"
            android:paddingTop="28dp"
            android:paddingBottom="32dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:elevation="8dp">

            <!-- SMS Icon -->
            <ImageView
                android:id="@+id/iv_sms_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_sms"
                android:background="@drawable/circle_white_bg"
                android:padding="16dp"
                app:tint="#5245A1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="6dp" />

            <!-- Title Text -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Emergency SMS Setup"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                app:layout_constraintTop_toBottomOf="@id/iv_sms_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Add contacts and configure emergency messages"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:alpha="0.95"
                android:textAlignment="center"
                android:fontFamily="sans-serif"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Add Contact Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contacts"
                    android:textColor="#1E293B"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add contacts who will receive your emergency messages with location"
                    android:textSize="14sp"
                    android:textColor="#64748B"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginBottom="20dp" />

                <!-- Add Contact Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_contact"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Add Emergency Contact"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01"
                    app:icon="@drawable/ic_add"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconSize="22dp"
                    app:iconTint="@android:color/white"
                    android:backgroundTint="#5245A1"
                    app:cornerRadius="16dp"
                    android:elevation="3dp" />

                <!-- Contacts RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_contacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false" />

                <!-- No Contacts Message -->
                <LinearLayout
                    android:id="@+id/tv_no_contacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:layout_marginTop="12dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/contact_phone_24"
                        app:tint="#CBD5E1"
                        android:layout_marginBottom="16dp"
                        android:alpha="0.8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No contacts added yet"
                        android:textColor="#475569"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Add your first emergency contact"
                        android:textColor="#94A3B8"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Custom Message Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/message_24"
                        app:tint="#5245A1"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Custom Emergency Message"
                        android:textColor="#1E293B"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This message will be sent to your emergency contacts"
                    android:textSize="14sp"
                    android:textColor="#64748B"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="20dp" />

                <!-- Message Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter emergency message"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxStrokeColor="#5245A1"
                    app:boxStrokeWidth="2dp"
                    app:hintTextColor="#5245A1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_emergency_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="4"
                        android:maxLines="6"
                        android:gravity="top|start"
                        android:textColor="#1E293B"
                        android:textSize="14sp"
                        android:padding="16dp"
                        android:fontFamily="sans-serif" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Save Message Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save_message"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="20dp"
                    android:text="Save Message"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01"
                    app:icon="@drawable/ic_save"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconSize="22dp"
                    app:iconTint="@android:color/white"
                    android:backgroundTint="#5245A1"
                    app:cornerRadius="16dp"
                    android:elevation="3dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Countdown Timer Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_clock"
                        app:tint="#5245A1"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Abort Timer"
                        android:textColor="#1E293B"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time to cancel before sending emergency message"
                    android:textSize="14sp"
                    android:textColor="#64748B"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="20dp" />

                <!-- Countdown Spinner -->
                <Spinner
                    android:id="@+id/spinner_countdown"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/spinner_bg"
                    android:spinnerMode="dropdown"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:elevation="2dp"
                    android:theme="@style/SpinnerTheme"
                    android:popupBackground="@android:color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Info Banner -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F1F5F9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    app:tint="#5245A1"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Emergency SMS will be sent automatically when triggered with your current location"
                    android:textColor="#475569"
                    android:textSize="13sp"
                    android:lineSpacingExtra="3dp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
