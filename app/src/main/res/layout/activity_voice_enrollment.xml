<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/Light_Sky_Blue">

    <!-- Title or header -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Shout Enrollment"
        android:textSize="22sp"
        android:textColor="@color/Deep_Navy"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <!-- Instruction text -->
    <TextView
        android:id="@+id/tv_enroll_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shout loudly when prompted to create your emergency voice signature"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="32dp" />

    <!-- Status display box -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready to start..."
        android:textSize="24sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/rounded_bg_light"
        android:layout_below="@id/tv_enroll_instruction"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="32dp" />

    <!-- Start enrollment button -->
    <Button
        android:id="@+id/btn_start_enrollment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Enrollment"
        android:textSize="16sp"
        android:backgroundTint="@color/Deep_Navy"
        android:textColor="@android:color/white"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="4dp"
        android:layout_below="@id/tv_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>
