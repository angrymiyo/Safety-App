<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Menu Button -->
    <ImageButton
        android:id="@+id/btn_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="28dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_menu"
        android:contentDescription="Menu"
        android:padding="8dp"
        app:tint="#FFFFFF" />

    <!-- Welcome Text Section -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back Safety Guard"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="3" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="নির্ভয়"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginTop="6dp"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4" />
    </LinearLayout>

    <!-- Main Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_section"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

            <!-- Emergency SOS Button Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/sos_card"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="18dp"
                app:cardCornerRadius="150dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#FFFFFF">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp">

                    <!-- Outer pulse ring -->
                    <ImageView
                        android:id="@+id/pulse_ring"
                        android:layout_width="118dp"
                        android:layout_height="118dp"
                        android:layout_gravity="center"
                        android:alpha="0.25"
                        android:scaleType="fitXY"
                        android:src="@drawable/pulse_ring_bg" />

                    <!-- Middle pulse -->
                    <ImageView
                        android:id="@+id/pulse_view"
                        android:layout_width="102dp"
                        android:layout_height="102dp"
                        android:layout_gravity="center"
                        android:alpha="0.35"
                        android:src="@drawable/sos_button_bg"
                        android:scaleType="fitXY" />

                    <!-- SOS Button -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="43dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="#00000000">

                        <FrameLayout
                            android:id="@+id/btn_sos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/red_circle"
                            android:clickable="true"
                            android:focusable="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="SOS"
                                android:textColor="@android:color/white"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-black"/>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Features Grid Section -->
            <LinearLayout
                android:id="@+id/features_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Safety Features"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-black"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="3" />

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp">

                    <!-- Emergency Contacts & SMS -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_save_contatcs"
                        android:layout_width="0dp"
                        android:layout_height="105dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp"
                            android:background="@drawable/card_gradient_1">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/contact_msgl_24"
                                app:tint="#5245A1"
                                android:layout_marginBottom="6dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Emergency Contacts"
                                android:textColor="#50469C"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- AI Voice Activate -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_ai_voice"
                        android:layout_width="0dp"
                        android:layout_height="105dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp"
                            android:background="@drawable/card_gradient_2">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/voice_24"
                                app:tint="#5245A1"
                                android:layout_marginBottom="6dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AI Voice Guardian"
                                android:textColor="#50469C"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp">

                    <!-- Share Live Location -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_share_location"
                        android:layout_width="0dp"
                        android:layout_height="105dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp"
                            android:background="@drawable/card_gradient_3">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/share_location_24"
                                app:tint="#5245A1"
                                android:layout_marginBottom="6dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Live Location"
                                android:textColor="#50469C"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- In Case Emergency -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_emergency_mode"
                        android:layout_width="0dp"
                        android:layout_height="105dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp"
                            android:background="@drawable/card_gradient_4">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/emergency_share_24"
                                app:tint="#5245A1"
                                android:layout_marginBottom="6dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Emergency Info"
                                android:textColor="#50469C"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Row 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Safe Zone -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_safe_zone"
                        android:layout_width="0dp"
                        android:layout_height="105dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp"
                            android:background="@drawable/card_gradient_5">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/safety_24"
                                app:tint="#5245A1"
                                android:layout_marginBottom="6dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Safe Zone"
                                android:textColor="#50469C"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Video Recording -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_alert"
                        android:layout_width="0dp"
                        android:layout_height="105dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp"
                            android:background="@drawable/card_gradient_6">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_camera"
                                app:tint="#5245A1"
                                android:layout_marginBottom="6dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Video Recording"
                                android:textColor="#50469C"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>

</RelativeLayout>

<!-- Navigation Drawer -->
<com.google.android.material.navigation.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#F5F3FA"
    android:fitsSystemWindows="true"
    app:headerLayout="@layout/nav_header"
    app:menu="@menu/drawer_menu"
    app:itemIconTint="#5245A1"
    app:itemTextColor="#50469C"
    app:itemBackground="@drawable/nav_item_selector"
    app:itemTextAppearance="@style/NavDrawerTextStyle"
    app:itemIconSize="24dp"
    app:itemVerticalPadding="14dp"
    app:itemHorizontalPadding="20dp"
    app:itemIconPadding="20dp" />

</androidx.drawerlayout.widget.DrawerLayout>
