<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".MainActivity">

    <!-- Main Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/padding_top">

            <!-- Welcome Text Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back Safety Guard"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_welcome"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="নির্ভয়"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_app_name"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="@dimen/spacing_xxlarge"/>

            <!-- Emergency SOS Button Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/sos_card"
                android:layout_width="@dimen/sos_card_size"
                android:layout_height="@dimen/sos_card_size"
                android:layout_marginBottom="@dimen/spacing_xlarge"
                app:cardCornerRadius="@dimen/sos_card_size"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="#FFFFFF">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/spacing_xlarge">

                    <!-- Outer pulse ring -->
                    <View
                        android:id="@+id/pulse_ring"
                        android:layout_width="@dimen/sos_pulse_outer"
                        android:layout_height="@dimen/sos_pulse_outer"
                        android:layout_gravity="center"
                        android:alpha="0.25"
                        android:background="@drawable/pulse_ring_bg" />

                    <!-- Middle pulse -->
                    <View
                        android:id="@+id/pulse_view"
                        android:layout_width="@dimen/sos_pulse_middle"
                        android:layout_height="@dimen/sos_pulse_middle"
                        android:layout_gravity="center"
                        android:alpha="0.35"
                        android:background="@drawable/sos_button_bg" />

                    <!-- SOS Button -->
                    <FrameLayout
                        android:id="@+id/btn_sos"
                        android:layout_width="@dimen/sos_button_size"
                        android:layout_height="@dimen/sos_button_size"
                        android:layout_gravity="center"
                        android:background="@drawable/red_circle"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="6dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="SOS"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/sos_text_size"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-black"/>
                    </FrameLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Features Grid Section -->
            <LinearLayout
                android:id="@+id/features_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_screen"
                android:paddingEnd="@dimen/padding_screen"
                android:paddingBottom="@dimen/spacing_xlarge">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Safety Features"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_section_title"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:fontFamily="sans-serif-medium"/>

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="@dimen/spacing_medium">

                    <!-- Emergency Contacts & SMS -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_save_contatcs"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/feature_card_height"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_small"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="@dimen/card_elevation"
                        app:cardBackgroundColor="#4A90E2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/card_padding">

                            <ImageView
                                android:layout_width="@dimen/feature_icon_size"
                                android:layout_height="@dimen/feature_icon_size"
                                android:src="@drawable/contact_msgl_24"
                                app:tint="@color/white"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Emergency Contacts"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_card_title"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- AI Voice Activate -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_ai_voice"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/feature_card_height"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_small"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="@dimen/card_elevation"
                        app:cardBackgroundColor="#E74C3C">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/card_padding">

                            <ImageView
                                android:layout_width="@dimen/feature_icon_size"
                                android:layout_height="@dimen/feature_icon_size"
                                android:src="@drawable/voice_24"
                                app:tint="@color/white"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AI Voice Guardian"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_card_title"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="@dimen/spacing_medium">

                    <!-- Share Live Location -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_share_location"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/feature_card_height"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_small"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="@dimen/card_elevation"
                        app:cardBackgroundColor="#F39C12">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/card_padding">

                            <ImageView
                                android:layout_width="@dimen/feature_icon_size"
                                android:layout_height="@dimen/feature_icon_size"
                                android:src="@drawable/share_location_24"
                                app:tint="@color/white"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Live Location"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_card_title"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- In Case Emergency -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_emergency_mode"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/feature_card_height"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_small"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="@dimen/card_elevation"
                        app:cardBackgroundColor="#9B59B6">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/card_padding">

                            <ImageView
                                android:layout_width="@dimen/feature_icon_size"
                                android:layout_height="@dimen/feature_icon_size"
                                android:src="@drawable/emergency_share_24"
                                app:tint="@color/white"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Emergency Info"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_card_title"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Row 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Safe Zone -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_safe_zone"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/feature_card_height"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_small"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="@dimen/card_elevation"
                        app:cardBackgroundColor="#27AE60">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/card_padding">

                            <ImageView
                                android:layout_width="@dimen/feature_icon_size"
                                android:layout_height="@dimen/feature_icon_size"
                                android:src="@drawable/safety_24"
                                app:tint="@color/white"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Safe Zone"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_card_title"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Alert -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_alert"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/feature_card_height"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_small"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="@dimen/card_elevation"
                        app:cardBackgroundColor="#16A085">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/card_padding">

                            <ImageView
                                android:layout_width="@dimen/feature_icon_size"
                                android:layout_height="@dimen/feature_icon_size"
                                android:src="@drawable/alert_24"
                                app:tint="@color/white"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alert"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_card_title"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_nav_bg"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@color/bottom_nav_selector"
        app:menu="@menu/bottom_nav_menu"
        android:elevation="8dp" />
</RelativeLayout>
