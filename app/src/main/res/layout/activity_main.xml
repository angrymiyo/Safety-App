<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:ignore="ExtraText">>

    <!-- Add Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_gridview"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="75dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="132dp"
        android:text="@string/welcome_message"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <GridLayout
        android:layout_width="409dp"
        android:layout_height="495dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="0dp"
        android:columnCount="2"
        android:rowCount="2">

<!--     Row 1, Column 1 &lt;!&ndash;emergency contacts&ndash;&gt;-->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_emergency_contact"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_margin="15dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

    <ImageView
        android:layout_width="57dp"
        android:layout_height="56dp"
        android:src="@drawable/contact_phone_24" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Emergency_Contact"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!--emergency message-->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_emergency_message"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_margin="15dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="57dp"
                android:layout_height="56dp"
                android:src="@drawable/contact_phone_24" />

            <TextView
                android:layout_width="139dp"
                android:layout_height="54dp"
                android:text="Save_Emergency Msg"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!--Voice Assistance-->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_AI"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="15dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="57dp"
                android:layout_height="56dp"
                android:src="@drawable/contact_phone_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SaveEmergency Msg"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!--Settings-->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_settings"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="15dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="57dp"
                android:layout_height="56dp"
                android:src="@drawable/contact_phone_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SaveEmergency Msg"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </GridLayout>

</RelativeLayout>