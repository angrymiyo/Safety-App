<?xml version="1.0" encoding="utf-8"?>
<!-- Keyword Detection Categories Grid - Shows all 5 active categories -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Row 1: Common SOS + Fear/Panic -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="12dp">

        <!-- Category 1: Common SOS -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_category_sos"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FF5252">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ†˜"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Common SOS"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 keywords"
                    android:textSize="11sp"
                    android:textColor="#FFFFFF"
                    android:alpha="0.9"/>

                <View
                    android:id="@+id/indicator_sos"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circle_pulse"
                    android:backgroundTint="#FFFFFF"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Category 2: Fear/Panic -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_category_fear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FF9800">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜±"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fear / Panic"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 keywords"
                    android:textSize="11sp"
                    android:textColor="#FFFFFF"
                    android:alpha="0.9"/>

                <View
                    android:id="@+id/indicator_fear"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circle_pulse"
                    android:backgroundTint="#FFFFFF"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Row 2: Attack/Threat + Emotional Distress -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="12dp">

        <!-- Category 3: Attack/Threat -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_category_attack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#E53935">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attack / Threat"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 keywords"
                    android:textSize="11sp"
                    android:textColor="#FFFFFF"
                    android:alpha="0.9"/>

                <View
                    android:id="@+id/indicator_attack"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circle_pulse"
                    android:backgroundTint="#FFFFFF"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Category 4: Emotional Distress -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_category_emotional"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#7E57C2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’”"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emotional"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 keywords"
                    android:textSize="11sp"
                    android:textColor="#FFFFFF"
                    android:alpha="0.9"/>

                <View
                    android:id="@+id/indicator_emotional"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circle_pulse"
                    android:backgroundTint="#FFFFFF"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Row 3: Coded SOS (full width) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_category_coded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#00897B">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”"
                        android:textSize="28sp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coded SOS / Hidden Help"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Context-sensitive emergency phrases (4 keywords)"
                    android:textSize="11sp"
                    android:textColor="#FFFFFF"
                    android:alpha="0.9"
                    android:layout_marginStart="40dp"/>
            </LinearLayout>

            <View
                android:id="@+id/indicator_coded"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/circle_pulse"
                android:backgroundTint="#FFFFFF"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
