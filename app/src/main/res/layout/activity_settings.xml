<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Light_Sky_Blue"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Sound Setting Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_sound"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/Deep_Navy" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enable Beep Sound"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:trackColor="@color/Teal_200"
                    app:thumbColor="@color/Deep_Navy" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Vibration -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_vibration"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/Deep_Navy" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enable Vibration"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_vibration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:trackColor="@color/Teal_200"
                    app:thumbColor="@color/Deep_Navy" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Contact Access -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/account_child_24px"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/Deep_Navy" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Allow Contact Access"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:trackColor="@color/Teal_200"
                    app:thumbColor="@color/Deep_Navy" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Voice Detection -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_voice"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/Deep_Navy" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enable Voice Detection"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_voice_detection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:trackColor="@color/Teal_200"
                    app:thumbColor="@color/Deep_Navy" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
