<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Light_Sky_Blue">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="AI Voice Trigger Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Deep_Navy"/>

        <Switch
            android:id="@+id/switchEnableVoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Voice Detection"
            android:thumbTint="@color/Deep_Navy"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
        <EditText
            android:id="@+id/editTriggerPhrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Set your custom trigger phrase (e.g. 'help me')"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:background="@color/white"
            android:textColor="@color/Deep_Navy"
            android:textColorHint="#888888"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnSavePhrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Phrase"
            android:backgroundTint="@color/Deep_Navy"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnTestDetection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Phrase Detection"
            android:backgroundTint="@color/Deep_Navy"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textDetectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:paddingTop="12dp" />

    </LinearLayout>
</ScrollView>
