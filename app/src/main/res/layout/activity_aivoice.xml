                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Train AI to recognize your voice"
                                android:textSize="11sp"
                                android:textColor="#546E7A"
                                android:lineSpacingExtra="1dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_enroll_voice"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="Enroll My Voice"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:cornerRadius="22dp"
                        app:icon="@drawable/ic_fingerprint"
                        app:iconGravity="textStart"
                        app:iconSize="18dp"
                        app:backgroundTint="#1976D2"
                        android:textColor="@android:color/white"
                        android:elevation="3dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Bottom Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Emergency Detection Overlay (Hidden by default) -->
    <include
        layout="@layout/emergency_detection_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
