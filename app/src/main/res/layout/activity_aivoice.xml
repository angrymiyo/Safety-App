<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_aivoice_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/Light_Sky_Blue"
    tools:context=".AIVoiceActivity">

    <!-- Title or header -->
    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voice Detection"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/Deep_Navy"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="16dp" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Initializing..."
        android:textSize="16sp"
        android:textColor="@color/Deep_Navy"
        android:gravity="center"
        android:padding="12dp"
        android:background="@android:color/white"
        android:layout_below="@id/tv_toolbar_title"
        android:layout_marginTop="20dp" />

    <!-- Progress bar showing active listening -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/tv_status"
        android:layout_marginTop="20dp"
        android:indeterminate="true"
        android:visibility="visible"
        android:progressTint="@color/Deep_Navy"/>

    <!-- Enroll Voice Button -->
    <Button
        android:id="@+id/btn_enroll_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enroll Personalized Voice"
        android:textSize="16sp"
        android:layout_below="@id/progress_bar"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/Deep_Navy"
        android:textColor="@android:color/white"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="4dp"/>

</RelativeLayout>
