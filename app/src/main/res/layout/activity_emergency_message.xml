<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/logbg">
    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emergency Message"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

    <EditText
        android:id="@+id/save_emergency_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Message (if any)..."
        android:background="@null"
        android:textColorHint="@android:color/darker_gray"
        android:padding="8dp"
        android:textColor="@android:color/black"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEND"
                app:icon="@drawable/send_24"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                android:backgroundTint="@color/blue"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Quick Texts Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20sp"
        android:text="Save Custom Message :"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <EditText
            android:id="@+id/et_emergency_message"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:gravity="top"
            android:background="@color/white"
            android:hint="Enter custom message..."
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btn_save_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Save Message"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent">

                <Button
                    android:id="@+id/btn_message_tmp1"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="@drawable/quick_button_gradient"
                    android:text="EMERGENCY!!!"
                    android:textAllCaps="true"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:foreground="?android:attr/selectableItemBackground" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent">

                <Button
                    android:id="@+id/btn_message_tmp2"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="@drawable/quick_button_gradient"
                    android:text="I'LL COME HOME LATE"
                    android:textAllCaps="true"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:foreground="?android:attr/selectableItemBackground" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent">

                <Button
                    android:id="@+id/btn_message_tmp3"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="@drawable/quick_button_gradient"
                    android:text="COME HERE QUICKLY!!!"
                    android:textAllCaps="true"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:foreground="?android:attr/selectableItemBackground" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent">

                <Button
                    android:id="@+id/btn_message_tmp4"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="@drawable/quick_button_gradient"
                    android:text="HELP ME!!!"
                    android:textAllCaps="true"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:foreground="?android:attr/selectableItemBackground" />
            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>



</LinearLayout>
