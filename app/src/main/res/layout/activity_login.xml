<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp"
    tools:context=".LoginActivity">

    <!-- Logo/Branding Section -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stay_app" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-25dp"
        android:text="Welcome Back"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Sign in to continue"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText" />

    <!-- Login Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/loginCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#F5F3FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitleText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Email Input Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textColor="#333333"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Email Input -->
            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/modern_input_selector"
                android:drawableStart="@drawable/email_24"
                android:drawableLeft="@drawable/email_24"
                android:drawablePadding="8dp"
                android:drawableTint="#1a237e"
                android:hint="Enter your email"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="13sp" />

            <!-- Password Input Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Password"
                android:textColor="#333333"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Password Input Container -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp">

                <EditText
                    android:id="@+id/inputPassword"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/modern_input_selector"
                    android:drawableStart="@drawable/lock_24"
                    android:drawableLeft="@drawable/lock_24"
                    android:drawablePadding="8dp"
                    android:drawableTint="#1a237e"
                    android:hint="Enter your password"
                    android:inputType="textPassword"
                    android:paddingStart="10dp"
                    android:paddingEnd="45dp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/togglePasswordVisibility"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_eye_closed"
                    android:contentDescription="Toggle password visibility"
                    android:clickable="true"
                    android:focusable="true" />

            </RelativeLayout>

            <!-- Forgot Password -->
            <TextView
                android:id="@+id/forgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:text="Forgot Password?"
                android:textColor="#1a237e"
                android:textSize="11sp"
                android:textStyle="bold" />

            <!-- Login Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/modern_primary_button"
                android:elevation="4dp"
                android:text="Sign In"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAllCaps="false" />

            <!-- Divider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="OR"
                    android:textColor="#999999"
                    android:textSize="10sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0" />
            </LinearLayout>

            <!-- Google Sign-In Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/googleSignInBtn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/modern_white_button"
                android:drawableStart="@drawable/google_icon_small"
                android:drawableLeft="@drawable/google_icon_small"
                android:drawablePadding="2dp"
                android:paddingStart="30dp"
                android:paddingEnd="20dp"
                android:gravity="center"
                android:text="Continue with Google"
                android:textAllCaps="false"
                android:textColor="#333333"
                android:textSize="13sp"
                android:textStyle="bold" />

            <!-- Sign Up Text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account? "
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/btnNewAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textColor="#1a237e"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:indeterminateTint="#667eea"
        app:layout_constraintTop_toBottomOf="@id/loginCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
