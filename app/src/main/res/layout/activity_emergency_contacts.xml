<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Pre-saved Message Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emergency Message"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_emergency_message"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:gravity="top"
        android:hint="Enter emergency message..."
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_save_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Save Message"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"/>

    <!-- Contacts List Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Emergency Contacts"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <!-- Contacts RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_contacts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"/>

    <!-- Add Contact Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/blue" app:tint="@color/white"/>

</LinearLayout>