<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item android:top="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#A03D3477"
                android:centerColor="#A05245A1"
                android:endColor="#A06858C0"
                android:type="linear" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Main Gradient -->
    <item android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#3D3477"
                android:centerColor="#5245A1"
                android:endColor="#6858C0"
                android:type="linear" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Shine Effect -->
    <item android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#60FFFFFF"
                android:centerColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Border Highlight -->
    <item android:bottom="3dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#50FFFFFF" />
            <corners android:radius="18dp" />
        </shape>
    </item>
</layer-list>

